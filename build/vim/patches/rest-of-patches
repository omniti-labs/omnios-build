-   dnl skip everything else
-   SKIP_GTK2=YES;
-   SKIP_GNOME=YES;
-   SKIP_MOTIF=YES;
-   SKIP_ATHENA=YES;
-   SKIP_NEXTAW=YES;
-   SKIP_PHOTON=YES;
-   SKIP_CARBON=YES
- fi
