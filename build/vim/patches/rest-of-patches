- 	AC_MSG_RESULT(yes); AC_DEFINE(XPMATTRIBUTES_TYPE, XpmAttributes_21),
- 	AC_MSG_RESULT(no); AC_DEFINE(XPMATTRIBUTES_TYPE, XpmAttributes)
- 	)
-   else
-     AC_DEFINE(XPMATTRIBUTES_TYPE, XpmAttributes)
-   fi
-   CPPFLAGS=$cppflags_save
- fi
