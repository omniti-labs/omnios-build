- 					 uname -r | grep '^5' >/dev/null; then
- 	    GUI_LIB_LOC="$GUI_LIB_LOC -R $GUI_LIB_LOC"
- 	  fi
- 	fi
-       fi
-       MOTIF_LIBNAME=-lXm
-     else
-       AC_MSG_RESULT(<not found>)
-       SKIP_MOTIF=YES
-     fi
-   fi
- fi
