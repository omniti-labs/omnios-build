- AC_ARG_WITH(compiledby, [  --with-compiledby=NAME  name to show in :version message],
- 	compiledby="$withval"; AC_MSG_RESULT($withval),
- 	compiledby=""; AC_MSG_RESULT(no))
- AC_SUBST(compiledby)
