- # include <stddef.h>
- #endif
- main() {char *s; s=(char *)tgoto("%p1%d", 0, 1); exit(0); }],
- 			  res="OK", res="FAIL", res="FAIL")
-       if test "$res" = "OK"; then
- 	break
-       fi
-       AC_MSG_RESULT($libname library is not usable)
-       LIBS="$olibs"
-     fi
-   done
