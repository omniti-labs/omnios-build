-     auto)	AC_MSG_RESULT(auto - automatic GUI support) ;;
-     photon)	AC_MSG_RESULT(Photon GUI support) ;;
-     *)		AC_MSG_RESULT([Sorry, $enable_gui GUI is not supported])
- 		SKIP_PHOTON=YES ;;
-   esac
