- if test "x$MACOSX" = "xyes" -a -n "$PERL"; then
-   dnl -ldl must come after DynaLoader.a
-   if echo $LIBS | grep -e '-ldl' >/dev/null; then
-     LIBS=`echo $LIBS | sed s/-ldl//`
-     PERL_LIBS="$PERL_LIBS -ldl"
-   fi
- fi
