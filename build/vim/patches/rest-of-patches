- if test "x$MACARCH" = "xboth" && test "x$GUITYPE" = "xCARBONGUI"; then
-   LDFLAGS="$LDFLAGS -isysroot $DEVELOPER_DIR/SDKs/MacOSX10.4u.sdk -arch i386 -arch ppc"
- fi
