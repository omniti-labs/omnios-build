- 	  fi
- 	  if test "$GCC" = yes; then
- 	    dnl Make Vim remember the path to the library.  For when it's not in
- 	    dnl $LD_LIBRARY_PATH.
- 	    MZSCHEME_LIBS="${MZSCHEME_LIBS} -Wl,-rpath -Wl,${path}"
