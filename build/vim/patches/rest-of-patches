- [bcopy_test_prog='
- #include "confdefs.h"
- #ifdef HAVE_STRING_H
- # include <string.h>
- #endif
- #if STDC_HEADERS
- # include <stdlib.h>
- # include <stddef.h>
- #endif
- main() {
-   char buf[10];
-   strcpy(buf, "abcdefghi");
-   mch_memmove(buf, buf + 2, 3);
-   if (strncmp(buf, "ababcf", 6))
-     exit(1);
-   strcpy(buf, "abcdefghi");
-   mch_memmove(buf + 2, buf, 3);
-   if (strncmp(buf, "cdedef", 6))
-     exit(1);
-   exit(0); /* libc version works properly.  */
- }']
