-     AC_MSG_CHECKING(for XIMText in X11/Xlib.h)
-     AC_EGREP_CPP(XIMText, [#include <X11/Xlib.h>],
- 		  AC_MSG_RESULT(yes),
- 		  AC_MSG_RESULT(no; xim has been disabled); enable_xim="no")
-   fi
-   CPPFLAGS=$cppflags_save
