+ func Test_dirstack_cleanup()
+   " This used to cause a memory access in freed memory.
+   let save_efm = &efm
+   lexpr '0'
+   lopen
+   fun X(c)
+     let save_efm=&efm
+     set efm=%D%f
+     if a:c == 'c'
+       caddexpr '::'
+     else
+       laddexpr ':0:0'
+     endif
+     let &efm=save_efm
+   endfun
+   call X('c')
+   call X('l')
+   call setqflist([], 'r')
+   caddbuffer
+   let &efm = save_efm
+ endfunc
