+ dnl isinf() and isnan() need to include header files and may need -lm.
+ AC_MSG_CHECKING([for isinf()])
+ AC_TRY_LINK([
+ #ifdef HAVE_MATH_H
+ # include <math.h>
+ #endif
+ #if STDC_HEADERS
+ # include <stdlib.h>
+ # include <stddef.h>
+ #endif
+ ], [int r = isinf(1.11); ],
+ 	AC_MSG_RESULT(yes); AC_DEFINE(HAVE_ISINF),
+ 	AC_MSG_RESULT(no))
