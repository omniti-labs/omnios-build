-   AC_MSG_RESULT($enable_gtk3_check)
-   if test "x$enable_gtk3_check" = "xno"; then
-     SKIP_GTK3=YES
-   fi
- fi
- 
- if test "x$SKIP_MOTIF" != "xYES" -a "$enable_gui_canon" != "motif"; then
-   AC_MSG_CHECKING(whether or not to look for Motif)
-   AC_ARG_ENABLE(motif-check,
