#   According to the /opt filesystem conventions
<Layout omni32>
    prefix:        /opt/omni
    exec_prefix:   ${prefix}
    bindir:        ${exec_prefix}/bin/i386
    sbindir:       ${exec_prefix}/sbin/i386
    libdir:        ${exec_prefix}/lib
    libexecdir:    ${exec_prefix}/libexec/i386
    mandir:        ${prefix}/man
    sysconfdir:    /etc${prefix}
    datadir:       ${prefix}/share
    installbuilddir: ${datadir}/build/i386
    includedir:    ${prefix}/include
    localstatedir: /var${prefix}
    runtimedir:    ${localstatedir}/run
</Layout>

